generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TL_VOLUNTEER
  STUDENT
}

enum TransactionType {
  BORROW
  RETURN
}

model Users {
  barcode String @id
  student_id String
  student_name String
  role  Role @default(STUDENT)
  verfied Boolean @default(false)

  @@map("users")
}

model Item {
  id        Int     @id @default(autoincrement())
  name      String
  quantity  Int
  available Boolean @default(true)
  price     Float
  createdAt DateTime @default(now())

  @@map("items")
}

model Transaction {
  id          Int     @id @default(autoincrement())
  student_id  String
  student_name String
  type        TransactionType
  quantity    Int
  item_name   String
  createdAt   DateTime @default(now())

  @@map("transactions")
}

model Damage {
  id          Int     @id @default(autoincrement())
  student_id  String
  student_name String
  item        String
  quantity    Int
  amount      Float
  createdAt   DateTime @default(now())

  @@map("damages")
}
